<%- include('partials/head') %>
<body class="bg-light">
  <%- include('partials/nav') %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow-lg">
          <div class="card-body">
            <h2 class="text-center mb-4">Add Your Home Details</h2>
            <form action="/add-home" method="post">
              <!-- Home Name -->
              <div class="mb-3">
                <label for="housename" class="form-label">House Name</label>
                <input type="text" name="housename" id="housename" class="form-control" placeholder="Enter your house name" required>
              </div>

              <!-- Price -->
              <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="price" id="price" class="form-control" placeholder="Enter your price" required>
              </div>

              <!-- Location -->
              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="location" id="location" class="form-control" placeholder="Enter your location" required>
              </div>

              <!-- Submit Button -->
              <div class="d-grid">
                <input type="submit" class="btn btn-primary" value="Add to Home">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS (optional for interactive components) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
