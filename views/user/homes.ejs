<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AIRBNB</title>
  
  <!-- Bootstrap CDN CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <%- include('../partials/nav') %>


  <!-- Welcome Text -->
  <div class="text-center mt-3">
    <h1 class="text-primary">
    homes list appear here
    </h1>
  </div>

  <!-- Homes List -->
  <div class="container mt-4">
    <div class="row">
      <% homes.forEach(home => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-lg">
            <img src="https://via.placeholder.com/350x200" class="card-img-top" alt="Home image">
            <div class="card-body">
              <h5 class="card-title"><%= home.housename %></h5>
              <p class="card-text"><strong>Price:</strong> Rs:<%= home.price %></p>
              <p class="card-text"><strong>Location:</strong> <%= home.location %></p>
              <a href="/homes/<%= home.id %>" class="btn btn-primary">details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Bootstrap CDN JavaScript (includes Popper.js) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
